        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedByNavigation.UserId)
        </dd>
    </dl>
</div>
<div>
    @if(Problems != null &&Problems.Count() > 0)
    {
        <h4>Задачі</h4>
        @await Html.PartialAsync("~/Views/Problem/Index.cshtml", Problems)
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ContestId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
